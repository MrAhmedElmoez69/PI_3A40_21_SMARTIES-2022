{% extends 'base_back.html.twig' %}

{% block title %}Produit{% endblock %}

{% block main %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ produit.libelle }}</td>
            </tr>
            <tr>
                <th>prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img style="width: 80%" src="{{asset('img/bike/') ~ produit.image }}" class="img-responsive" alt="Image"></td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('produit_index') }}"><button type="button" class="btn btn-theme02"><i class="fa fa-backward"></i> Back</button></a><br><br>

    <a href="{{ path('produit_edit', {'id': produit.id}) }}"><button type="button" class="btn btn-theme02"><i class="fa fa-edit "></i> Modifier</button></a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
